<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>
      <form action="/users/login" method="POST">
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="輸入信箱">
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="輸入密碼">
      </div>
      <div class="d-grid gap-2">
      <button type="submit" class="btn btn-success btn-block">Login</button>
        <a href="/auth/facebook" class="fab fa-facebook btn btn-primary btn-block">Facebook Login</a>
      </div>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
      </form>
    </div>
  </div>
</div>