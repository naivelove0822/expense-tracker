<div class="col-8 mx-auto">
<form action='/'>
  <select class='col-sm form-select mb-3' ria-label="Default select example"  id='categoryId' name='categoryId' onchange='this.form.submit()'>
    <option value=''>類別</option>
    {{#each categories}}
    <option value='{{this._id}}' {{this.selected}}>{{this.name}}</option>
    {{/each}}
  </select>
</form>





  <table class="table table-striped table-hover">
    <thead>
      總金額:<h1 class="text-center text-danger">{{totalAmount}}</h1>
    </thead>
    <tbody>

      <div class="group-list mt-5">
        {{#each expenses}}
        <div class="container mt-4">
          <div class="row">
            <div class="col-2 d-flex align-items-center">
              <i class="{{this.categoryId.icon}}"></i>
            </div>
            <div class='col-6 ps-3 py-2'>
              <div class='col fs-3'>{{this.name}}</div>
              <div class='col'>{{this.date}}</div>
            </div>
            <div class="col-2 d-flex align-items-center">
              {{this.amount}}
            </div>
            <div class="col-2 d-flex align-items-center">
              <a href="./expense/{{ this._id }}/edit" class="btn btn-warning" style="margin-right: 10px;">Edit</a>



              <form action="./expense/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;"><button
                  type="submit" class="btn btn-danger ">Delete</button></form>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      <div class="col-2 mx-auto mt-5">
        <a href="./expense/new" class="btn btn-dark" style="width: 200px; background-color: #FD6A02;">新增支出</a>
      </div>
</div>