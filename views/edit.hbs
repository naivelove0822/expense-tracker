<form action="/expense/{{ expense._id }}?_method=PUT" method="POST">
  <div class="container">
    <div class="row col-6 mx-auto mt-5">
      <span class="col-sm-2"><span class="text-danger">*</span>必填欄位</span>
      <div class="col-sm-10 text-center">
        <span class="fs-3"><strong>請修改你的支出</strong></span>
      </div>
    </div>


    <div class="row col-6 mx-auto mt-5">
      <label for="name" class="col-sm-2 col-form-label">名稱<span class="text-danger">*</span></label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name" placeholder="EX:午餐" name="name" value="{{ expense.name }}"
          required>
      </div>
    </div>

    <div class="row col-6 mx-auto mt-5">
      <label for="date" class="col-sm-2 col-form-label">日期<span class="text-danger">*</span></label>
      <div class="col-sm-10">
        <input type="date" class="form-control" id="date" placeholder="110.1.1" name="date" value="{{ expense.date }}"
          required>
      </div>
    </div>

    <div class="row col-6 mx-auto mt-5">
      <label for="category" class="col-sm-2 col-form-label">
        類別<span class="text-danger">*</span>
      </label>
      <div class="col-sm-10">
        <select class="form-control" aria-label="Default select example" name="categoryId" required>
          <option value="{{ selectedCategory._id }}" selected>{{selectedCategory.name}}</option>
          {{#each category}}
          <option value="{{this._id}}">{{this.name}}</option>
          {{/each}}
        </select>
      </div>
    </div>

    <div class="row col-6 mx-auto mt-5">
      <label for="amount" class="col-sm-2 col-form-label">金額<span class="text-danger">*</span></label>
      <div class="col-sm-10">
        <input type="number" class="form-control" id="amount" placeholder="0" name="amount" value="{{ expense.amount }}"
          required>
      </div>
    </div>

    <div class="row col-6 mt-5" style="margin: 360px;">
      <button type="submit" class="btn btn-dark mx-auto" style="width: 200px; background-color: #FD6A02;">送出</button>
    </div>
  </div>
</form>